{
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*",
    "test-apps/*"
  ],
  "engines": {
    "node": ">=24.10.1",
    "bun": ">=1.3.5"
  },
  "scripts": {
    "ci": "bun run --cwd packages/aku check && bun run --cwd packages/aku build && bun run --cwd test-apps/nextjs check",
    "build": "bun run --filter='*' build",
    "clean": "bun run --filter='*' clean",
    "check": "bun run check:test && bun run check:ts && bun run check:lint && bun run check:format",
    "check:test": "bun run --filter='*' check:test --elide-lines=0",
    "check:ts": "bun run --filter='*' check:ts",
    "check:lint": "bun run --filter=* lint",
    "check:format": "biome check .",
    "format": "biome check --write .",
    "format:check": "biome check ."
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.5",
    "@types/bun": "1.2.21",
    "bun-types": "1.2.21"
  }
}
